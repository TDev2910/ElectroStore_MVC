@{
    ViewData["Title"] = "Tài khoản";
}

@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4">Tài khoản</h2>
            <div class="list-group">
                <a asp-controller="User" asp-action="ChangePassword" class="list-group-item list-group-item-action">Đổi mật khẩu</a>
                <a asp-controller="User" asp-action="Orders" class="list-group-item list-group-item-action">Xem đơn hàng</a>
                <a asp-controller="User" asp-action="UpdateProfile" class="list-group-item list-group-item-action">Cập nhật thông tin</a>
            </div>
        </div>
    </div>
</div>