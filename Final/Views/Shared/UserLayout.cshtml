<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - User Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" asp-controller="User" asp-action="Dashboard">Final</a>
    <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Product">Trang chủ</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Product">Sản phẩm</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="Index">Liên hệ</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Cart" asp-action="Index">Giỏ hàng</a></li>
        </ul>
    </div>
    <span class="navbar-text">
            Xin chào, @User.Identity.Name!
        </span>
    <a class="nav-link" asp-controller="User" asp-action="Account">Tài khoản</a>
    <a class="nav-link" asp-controller="Home" asp-action="Logout">Đăng xuất</a>
</nav>
<div class="container mt-4">
    @RenderBody()
</div>
</body>
</html>